<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:provider proxy="tccJavassist"/>
    <dubbo:application name="dubbo-consumer" />
    <dubbo:registry protocol="zookeeper" address="localhost:2181"/>



    <!--这里必须是在xml注入dubbo的服务，否则子业务的分布式事务控制失败-->
    <dubbo:reference id="redPacketTradeOrderService" group="default" timeout="50000" interface="com.corn.redpacket.RedPacketTradeOrderService" filter="tracing"/>
    <dubbo:reference id="capitalTradeOrderService"  group="default" timeout="50000" interface="com.corn.capital.CapitalTradeOrderService" filter="tracing"/>
    <dubbo:reference id="orderServiceAPI"  group="default" timeout="50000" interface="com.corn.order.OrderServiceAPI" filter="tracing"/>


</beans>