<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.corn.capital.dao.CapCapitalAccountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.corn.capital.model.CapCapitalAccount">
        <id column="CAPITAL_ACCOUNT_ID" property="capitalAccountId" />
        <result column="BALANCE_AMOUNT" property="balanceAmount" />
        <result column="USER_ID" property="userId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        CAPITAL_ACCOUNT_ID, BALANCE_AMOUNT, USER_ID
    </sql>

    <select id="getCapitalAccountByUserId" parameterType="java.lang.String" resultType="com.corn.capital.model.CapCapitalAccount">
        SELECT
            t.BALANCE_AMOUNT,
            t.CAPITAL_ACCOUNT_ID,
            t.USER_ID
        FROM
            cap_capital_account t
        WHERE
            t.USER_ID = #{userId}
    </select>

    <update id="descRedPacketAmount">
        UPDATE cap_trade_order t
        SET t.BALANCE_AMOUNT = t.BALANCE_AMOUNT - #{amount}
        WHERE
            t.USER_ID = #{userId}
    </update>

</mapper>
